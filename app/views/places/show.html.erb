<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1><%= @place.name %></h1>
	<i><%= @place.address %></i>
	<br><br>
	<p><%= @place.description %></p>

	<div class="clear"></div>

	<!-- Modal for adding photos -->
	<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">Add a Photo</h4>
	      </div>
	      <div class="modal-body">
	        <%= simple_form_for @photo, :url => place_photos_path(@place) do |f| %>
	        	<%= f.input :picture %>
	        	<%= f.input :caption %>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <%= f.submit "Add a Photo", :class => 'btn btn-primary' %>
	        <% end %>
	      </div>
	    </div>
	  </div>
	</div>

	<hr>

	<% if @place.photos.present? %>
		<div class="gallery">
			<figure class="gallery__image-wrapper">
				<% @place.photos.each do |photo| %>
					<%= image_tag photo.picture, :class => 'img-responsive, center-block' %>
					<br>
					<figcaption class="text-center"><%= photo.caption %></figcaption>

					<br>
					<br>
				<% end %>		
			</figure>
		</div>

		<hr>
	<% end %>

	<% if @place.latitude.present? && @place.longitude.present? %>
		<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
		<script>
			function initialize() {
			  var myLatlng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);
			  var mapOptions = {
			    zoom: 12,
			    center: myLatlng
			  }
			  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

			  var marker = new google.maps.Marker({
			      position: myLatlng,
			      map: map,
			      title: 'Hello World!'
			  });
			}

			google.maps.event.addDomListener(window, 'load', initialize);

		</script>

		<div id="map-canvas"></div>
	<% end %>

	<br>

	<div class="pull-right">
		<% if current_user && current_user == @place.user %>
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#photoModal">
			  Add a Photo
			</button>

			<%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-primary' %>

			<%= link_to 'Destroy', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => 'btn btn-danger' %>
		<% end %>
	</div>
</div>

<div class="clear"></div>

<!-- Modal for adding comments -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>
        	<%= f.input :message %>
        	<%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Add a comment", :class => 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br><br>

<div class="col-xs-10 col-xs-offset-1">
	<h1 class="pull-left">Comments</h1>
	<!-- Button trigger modal -->
	<button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
	  Add a comment
	</button>

	<% @place.comments.each do |comment| %>
		<div class="col-xs-12">
			<blockquote>
				<% if comment.humanized_rating.present? %>
					<b><%= comment.humanized_rating %></b> -
				<% end %>
				<%= comment.message %>
			</blockquote>
			<small><%= comment.user.email %></small>
		</div>
	<% end %>
</div>

